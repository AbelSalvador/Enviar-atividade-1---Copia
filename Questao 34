#include <stdio.h>
#include <math.h>

int main () {
float futuro, taxa, periodos, presente;

printf ("Insira os valores do investimento futuro, da taxa de juros e o número períodos ");
scanf ("%f %f %f", &futuro, &taxa, &periodos);

presente = futuro / pow( 1 + taxa / 100, periodos);

printf ("O valor do investimento no presente é de %.3f\n", presente);

return 0;

}

